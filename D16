<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">    
    <title>IFE ECMAScript</title>
</head>
<body>        
    <input id="first-number" type="number" value="0" placeholder="第一个数字">
    <input id="second-number" type="number" value="0" placeholder="第二个数字">
    <button id="add-btn">加</button>
    <button id="minus-btn">减</button>
    <button id="times-btn">乘</button>
    <button id="divide-btn">除</button>
    <p id="result">运算结果</p>
    <script>
        var result = document.getElementById('result');
        var first = document.getElementById('first-number');
        var second = document.getElementById('second-number');
        document.getElementById("add-btn").onclick = ()=>{
            result.innerText = Number(first.value) + Number(second.value);
        }
        document.getElementById("minus-btn").onclick = ()=>{
            result.innerText = Number(first.value) - Number(second.value);
        }
        document.getElementById("times-btn").onclick = ()=>{
            result.innerText = Number(first.value) * Number(second.value);
        }
        document.getElementById("divide-btn").onclick = ()=>{
            result.innerText = Number(first.value) / Number(second.value);
        }    
        // document.getElementById("add-btn").onclick = ()=>{
        //     document.getElementById("result").innerText = Number(document.getElementById("first-number").value) + Number(document.getElementById("second-number").value);
        // }
        // document.getElementById("minus-btn").onclick = ()=>{
        //     document.getElementById("result").innerText = Number(document.getElementById("first-number").value) - Number(document.getElementById("second-number").value);
        // }
        // document.getElementById("times-btn").onclick = ()=>{
        //     document.getElementById("result").innerText = Number(document.getElementById("first-number").value) * Number(document.getElementById("second-number").value);
        // }
        // document.getElementById("divide-btn").onclick = ()=>{
        //     document.getElementById("result").innerText = Number(document.getElementById("first-number").value) / Number(document.getElementById("second-number").value);
        // }
    </script>
</body>
</html>
